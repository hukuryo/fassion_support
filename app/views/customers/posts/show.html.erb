<div class="cover-show">
  <div class="container">
    <div class="row justify-content-center">
      <h2 class="font-weight-normal mt-3">投稿詳細</h2>
    </div>
      <div class="d-flex">
        <div class="row justify-content-center d-block">
          <p class="caption"><strong><%= @post.user.name %></strong></p>
          <%= attachment_image_tag @post, :image, format: 'jpeg', size: "450x350" %><br>
          <p class="caption"><%= @post.name %><br>
            <% if @post.liked_by?(current_user) %>
              <%= link_to post_likes_path(@post), method: :delete, class: "favorite_btn" do %>
               ♥<%= @post.likes.count %> いいね
              <% end %>
            <% else %>
              <%= link_to post_likes_path(@post), method: :post, class: "favorite_btn" do %>
                ♡<%= @post.likes.count %> いいね
              <% end %>
            <% end %>
          </p>
          <h2>コーデのポイント説明</h2>
          <p id="text"><%= @post.introduction %></p>
          <% if @post.user == current_user %>
            <%= link_to '編集する', edit_post_path(@post.id), class: "btn btn-info mr-3" %>
            <%= link_to '削除する', post_path(@post.id),method: :delete, "data-confirm"=>"本当に消しますか？", class: "btn btn-danger" %><br>
          <% end %>
          <%= link_to '投稿一覧ページへ', posts_path, class: "btn btn-dark mt-3" %>
        </div>
        <div class="comments ml-5 mt-5">
          <%= form_with(model:[@post, @comment], local: true) do |f| %>
            <%= f.text_area :text, :size=>"60x3",placeholder: "コメントする" %>
            <%= f.submit "送信する", class: "btn btn-success mb-4" %>
          <% end %>
          <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
	          <div class="comments-index mb-2">
              <%= comment.user.name %>
              <%= comment.created_at.strftime('%Y/%m/%d') %><br>
                <div class="d-flex">
                  <%= comment.text %>
                  <% if comment.user == current_user %>
                    <div class="comment-delete">
                      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class: "btn-sm btn-danger" %>
                    </div>
                  <% end %>
                </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>