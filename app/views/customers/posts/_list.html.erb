<% @posts.each do |post| %>
  <div class="card col-md-4">
    <div class="card-body one-post">
      <p class="caption" <%=@hidden%>><i class="fas fa-user"></i> <%= post.user.name %></p>
      <%= link_to post_path(post) do %>
        <h5 class="caption mb-0 post-title"><%= post.name %></h5><br>
      <% end %>
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', class: "all-post-img" %>
      <% end %>
      <p class="list-group-item caption">ジャンル：<%= post.genre&.name %></p>
      <div class="card-body">
        <div class="list-group">
          <div class="list-group-item">
            <% if post.liked_by?(current_user) %>
              <%= link_to post_likes_path(post), method: :delete, class: "favorite_btn" do %>
               <i class="fas fa-heart like-btn"></i><%= post.likes.count %>
              <% end %>
            <% else %>
              <%= link_to post_likes_path(post), method: :post, class: "favorite_btn" do %>
                <i class="far fa-heart unlike-btn"></i><%= post.likes.count %>
              <% end %>
            <% end %>
          </div>
          <div class="list-group-item">
            <%= link_to post_path(post) do %>
            <p class="caption"><i class="fas fa-comment"></i> <%= "#{post.comments.count}件のコメント" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>