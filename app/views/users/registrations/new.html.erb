<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="signup-page">
    <div class="col-md-4 offset-md-4">
      <h2 class="text-center pt-5"><i class="fas fa-user-plus"></i> 新規会員登録</h2>
      <div class="mb-3">
        <label for="floatingInput">名前</label><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="form_group pt-4">
        <label for="floatingInput">メールアドレス</label><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group pt-4" >
        <label for="floatingInput">パスワード(英数字6文字以上)</label><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group pt-4" >
        <label for="floatingInput">パスワード確認</label><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="text-center pt-4">
        <%= f.submit "新規登録", class: "btn btn-success" %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
<% end %>