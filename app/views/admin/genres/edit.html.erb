
<h3>ジャンル編集画面</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
 <div class = "form-group">
  <label for="user_image">ジャンル名</label>
  <%= f.text_field :name, class: "form-control name", autofocus: true, placeholder:"名前"%>
 </div>
 <div class="form-group">
  <%= f.submit "変更", class: "btn btn-sm btn-primary" %>
 </div>
<% end %>