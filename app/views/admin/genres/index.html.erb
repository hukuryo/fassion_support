
<h3>ジャンル一覧画面</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
 <div class = "form-group">
  <label for="user_image">ジャンル追加</label>
  <%= f.text_field :name, class: "form-control name", autofocus: true, placeholder:"ジャンル名"%>
 </div>
 <div class="form-group">
  <%= f.submit "追加", class: "btn btn-sm btn-success" %>
 </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ジャンル名</th>
    </tr>
  </thead>
   <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <th scope="row"><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success"%></th>
      <td><%= genre.name %></td>
    </tr>
  </tbody>
 <% end %>
</table>