<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="login-page">
    <div class="col-md-4 offset-md-4">
      <h2 class="text-center pt-5"><i class="fas fa-sign-in-alt"></i> ログイン</h2>
      <div class="form_group pt-4">
        <i class="fas fa-envelope"></i> <label for="floatingInput">メールアドレス</label><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group pt-4" >
         <i class="fas fa-key"></i> <label for="floatingInput">パスワード(英数字6文字以上)</label><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="text-center pt-4">
        <%= f.submit "ログイン", class: "btn btn-success" %><br>
      </div>
    </div>
  </div>
<% end %>